<!-- 네임스페이스(사용영역) 설정 -->
<mapper namespace="com.classs.skhuter.mappers.BoardMapper">

	<!-- 글쓰기 -->
	<insert id="create">
		insert into Board (board_no,user_no, title,regdate,hit_count, password, content,like_count,hate_count)
		values(seq_Board.nextVal,1,#{title},sysdate,0,#{password}, #{content},0,0)
	</insert>

	<select id="read" resultType="com.classs.skhuter.Board.domain">
		select
		boardNo, title, regdate, hitCount, password, content, like, hate
		from
		Board
		where boardNo = #{boardNo}
	</select>
	
	<!-- 삭제 -->
	<delete id="delete">
		delete from tbl_board where boardNo = #{boardNo}
	</delete>
	
	<!-- 게시판 리스트 -->
	<select id="listAll" resultType="com.classs.skhuter.Board.domain">
 <![CDATA[
 select 
   boardNo, title, regdate, hitCount, password, content, like, hate
 from 
   Board 
 where boardNo > 0 
 order by boardNo desc, regdate desc
 ]]>
	</select>
